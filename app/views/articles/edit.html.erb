<h1> Edit your article </h1>

<% if @article.errors.any? %>
<h2> Errors! </h2>
    <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li>
                <%=  message %>
            </li>
        <% end %>
    </ul>    
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title, "Article's title" %> <br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description, "Article's Description" %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :author, "Article's Author" %> <br/>
        <%= f.text_field :author %>
    </p>
        <%= f.submit "Edit article", disable_with: 'Submiting...' %>
    </p>
<% end %>

<%= link_to "Articles page", articles_path %>

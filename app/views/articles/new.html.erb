<h1>Create an article</h1>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title, "Article's title" %> <br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description, "Article's Description" %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :author, "Article's Author" %> <br/>
        <%= f.text_field :author %>
    </p>
        <%= f.submit "Create article", disable_with: 'Submiting...' %>
    </p>
<% end %>